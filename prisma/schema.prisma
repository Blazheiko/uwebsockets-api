generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  BigInt            @id @default(autoincrement())
  name                String            @db.VarChar(100)
  email               String            @unique
  password            String            @map("password")
  phone               String?           @unique @db.VarChar(20)
  isAdmin             Boolean           @default(false)
  createdAt           DateTime          @default(now()) @map("created_at")
  updatedAt           DateTime          @updatedAt @map("updated_at")
  calendarEvents      Calendar[]        @relation("UserCalendarEvents")
  contactOf           ContactList[]     @relation("ContactOfUser")
  contacts            ContactList[]     @relation("UserContacts")
  receivedInvitations Invitation[]      @relation("ReceivedInvitations")
  createdInvitations  Invitation[]      @relation("CreatedInvitations")
  receivedMessages    Message[]         @relation("ReceivedMessages")
  sentMessages        Message[]         @relation("SentMessages")
  notes               Notes[]           @relation("UserNotes")
  assignedProjects    ProjectAssignee[] @relation("AssignedProjects")
  projects            Project[]         @relation("UserProjects")
  tasks               Task[]            @relation("UserTasks")
  pushSubscriptions   PushSubscription[] @relation("UserPushSubscriptions")
  pushNotificationLogs PushNotificationLog[] @relation("UserPushNotificationLogs")

  @@map("users")
}

model ContactList {
  id            BigInt   @id @default(autoincrement())
  userId        BigInt   @map("user_id")
  contactId     BigInt   @map("contact_id")
  status        String   @default("pending")
  unreadCount   Int      @default(0) @map("unread_count")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  rename        String?  @db.VarChar(100)
  lastMessageId BigInt?  @map("last_message_id")
  contact       User     @relation("ContactOfUser", fields: [contactId], references: [id])
  lastMessage   Message? @relation("LastMessage", fields: [lastMessageId], references: [id])
  user          User     @relation("UserContacts", fields: [userId], references: [id])

  @@unique([userId, contactId])
  @@index([contactId], map: "contact_list_contact_id_fkey")
  @@index([lastMessageId], map: "contact_list_last_message_id_fkey")
  @@map("contact_list")
}

model Message {
  id          BigInt        @id @default(autoincrement())
  senderId    BigInt        @map("sender_id")
  receiverId  BigInt        @map("receiver_id")
  type        MessageType   @default(TEXT)
  content     String        @db.Text
  src         String?
  isRead      Boolean       @default(false) @map("is_read")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  contactList ContactList[] @relation("LastMessage")
  receiver    User          @relation("ReceivedMessages", fields: [receiverId], references: [id])
  sender      User          @relation("SentMessages", fields: [senderId], references: [id])

  @@index([receiverId], map: "messages_receiver_id_fkey")
  @@index([senderId], map: "messages_sender_id_fkey")
  @@map("messages")
}

model Invitation {
  id        BigInt   @id @default(autoincrement())
  token     String   @unique
  userId    BigInt   @map("user_id")
  invitedId BigInt?  @map("invited_id")
  isUsed    Boolean  @default(false) @map("is_used")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  name      String   @db.VarChar(100)
  invited   User?    @relation("ReceivedInvitations", fields: [invitedId], references: [id])
  user      User     @relation("CreatedInvitations", fields: [userId], references: [id])

  @@index([invitedId], map: "invitations_invited_id_fkey")
  @@index([userId], map: "invitations_user_id_fkey")
  @@map("invitations")
}

model Notes {
  id          BigInt       @id @default(autoincrement())
  title       String       @db.VarChar(255)
  description String       @db.Text
  userId      BigInt       @map("user_id")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  user        User         @relation("UserNotes", fields: [userId], references: [id])
  photos      NotesPhoto[] @relation("NotePhotos")

  @@index([userId], map: "notes_user_id_fkey")
  @@map("notes")
}

model NotesPhoto {
  id        BigInt   @id @default(autoincrement())
  noteId    BigInt   @map("note_id")
  src       String   @db.VarChar(500)
  filename  String?  @db.VarChar(255)
  size      Int?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  note      Notes    @relation("NotePhotos", fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId], map: "notes_photos_note_id_fkey")
  @@map("notes_photos")
}

model Calendar {
  id          BigInt   @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String   @db.Text
  startTime   DateTime @map("start_time")
  endTime     DateTime @map("end_time")
  userId      BigInt   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation("UserCalendarEvents", fields: [userId], references: [id])

  @@index([userId], map: "calendar_user_id_fkey")
  @@map("calendar")
}

model Task {
  id             BigInt       @id @default(autoincrement())
  title          String       @db.VarChar(255)
  description    String?      @db.Text
  userId         BigInt       @map("user_id")
  projectId      BigInt?      @map("project_id")
  status         TaskStatus   @default(TODO)
  priority       TaskPriority @default(MEDIUM)
  progress       Int          @default(0)
  isCompleted    Boolean      @default(false) @map("is_completed")
  tags           String?      @db.VarChar(500)
  dueDate        DateTime?    @map("due_date")
  startDate      DateTime?    @map("start_date")
  estimatedHours Float?       @map("estimated_hours")
  actualHours    Float?       @map("actual_hours")
  parentTaskId   BigInt?      @map("parent_task_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  parentTask     Task?        @relation("SubTasks", fields: [parentTaskId], references: [id])
  subTasks       Task[]       @relation("SubTasks")
  project        Project?     @relation("ProjectTasks", fields: [projectId], references: [id])
  user           User         @relation("UserTasks", fields: [userId], references: [id])

  @@index([parentTaskId], map: "tasks_parent_task_id_fkey")
  @@index([projectId], map: "tasks_project_id_fkey")
  @@index([userId], map: "tasks_user_id_fkey")
  @@map("tasks")
}

model Project {
  id          BigInt            @id @default(autoincrement())
  title       String            @db.VarChar(255)
  description String?           @db.Text
  color       String?           @db.VarChar(50)
  isActive    Boolean           @default(true) @map("is_active")
  startDate   DateTime?         @map("start_date")
  endDate     DateTime?         @map("end_date")
  userId      BigInt            @map("user_id")
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")
  dueDate     DateTime?         @map("due_date") @db.Date
  priority    ProjectPriority   @default(medium)
  progress    Int               @default(0) @db.SmallInt
  status      ProjectStatus     @default(planning)
  assignees   ProjectAssignee[] @relation("ProjectAssignees")
  projectTags ProjectTag[]      @relation("ProjectTags")
  user        User              @relation("UserProjects", fields: [userId], references: [id])
  tasks       Task[]            @relation("ProjectTasks")

  @@index([userId], map: "projects_user_id_fkey")
  @@map("projects")
}

model ProjectTag {
  id        BigInt   @id @default(autoincrement())
  projectId BigInt   @map("project_id")
  tag       String   @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")
  project   Project  @relation("ProjectTags", fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, tag])
  @@map("project_tags")
}

model ProjectAssignee {
  id        BigInt   @id @default(autoincrement())
  projectId BigInt   @map("project_id")
  userId    BigInt   @map("user_id")
  label     String?  @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  project   Project  @relation("ProjectAssignees", fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation("AssignedProjects", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([userId], map: "project_assignees_user_id_fkey")
  @@map("project_assignees")
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectStatus {
  planning
  in_progress
  on_hold
  completed
  archived
}

enum ProjectPriority {
  low
  medium
  high
}

enum PushNotificationStatus {
  SENT
  FAILED
  PENDING
}

model PushSubscription {
  id                 BigInt    @id @default(autoincrement())
  userId             BigInt    @map("user_id")
  endpoint           String    @unique @db.VarChar(500)
  p256dhKey          String    @map("p256dh_key") @db.Text
  authKey            String    @map("auth_key") @db.Text
  userAgent          String?   @map("user_agent") @db.Text
  ipAddress          String?   @map("ip_address") @db.VarChar(45)
  isActive           Boolean   @default(true) @map("is_active")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  lastUsedAt         DateTime? @map("last_used_at")
  deviceType         String?   @map("device_type") @db.VarChar(50)
  browserName        String?   @map("browser_name") @db.VarChar(100)
  browserVersion     String?   @map("browser_version") @db.VarChar(50)
  osName             String?   @map("os_name") @db.VarChar(100)
  osVersion          String?   @map("os_version") @db.VarChar(50)
  notificationTypes  Json?     @map("notification_types")
  timezone           String?   @db.VarChar(50)
  user               User      @relation("UserPushSubscriptions", fields: [userId], references: [id], onDelete: Cascade)
  notificationLogs   PushNotificationLog[] @relation("SubscriptionLogs")

  @@index([userId], map: "push_subscriptions_user_id_fkey")
  @@map("push_subscriptions")
}

model PushNotificationLog {
  id             BigInt                   @id @default(autoincrement())
  userId         BigInt?                  @map("user_id")
  subscriptionId BigInt?                  @map("subscription_id")
  messageTitle   String?                  @map("message_title") @db.VarChar(255)
  messageBody    String?                  @map("message_body") @db.Text
  messageData    Json?                    @map("message_data")
  sentAt         DateTime                 @default(now()) @map("sent_at")
  status         PushNotificationStatus?
  errorMessage   String?                  @map("error_message") @db.Text
  responseData   Json?                    @map("response_data")
  user           User?                    @relation("UserPushNotificationLogs", fields: [userId], references: [id], onDelete: SetNull)
  subscription   PushSubscription?        @relation("SubscriptionLogs", fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@index([userId], map: "push_notifications_log_user_id_fkey")
  @@index([subscriptionId], map: "push_notifications_log_subscription_id_fkey")
  @@map("push_notifications_log")
}
